<?xml version="1.0" encoding="utf-8" ?>  
<configuration>  
    <startup>   
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />  
    </startup>  
  
    <connectionStrings>  
      <add name="defaultConnectionString" connectionString="Data Source=.;Integrated Security=True" />
      <add name="salonConnectionString" connectionString="Data Source=.;Initial Catalog=Salon_;Integrated Security=True" />
    </connectionStrings>

  <queries>
    <add name ="Customer" >
        CREATE TABLE[dbo].[Customer](
        [ClientId][int] PRIMARY KEY IDENTITY(1, 1) NOT NULL,
        [FirstName] [varchar](50) NOT NULL,
        [LastName] [varchar](50) NOT NULL,
        [Phone] [varchar](9) NOT NULL
        )
    </add> 
  </queries>
  
</configuration>  